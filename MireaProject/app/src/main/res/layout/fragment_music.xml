<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D2D2D"
    tools:context=".practice4.MusicFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/Cover"
            android:layout_width="414dp"
            android:layout_height="299dp"
            android:scaleType="fitXY"
            android:src="@drawable/run_cover"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/button_play"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/rounded_button"
            android:onClick="onClick"
            android:src="@drawable/ic_play_button_img_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.586"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cover"
            app:layout_constraintVertical_bias="0.615" />

        <ImageButton
            android:id="@+id/button_pause"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/rounded_button"
            android:onClick="onClick"
            android:src="@drawable/ic_pause_button_img_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_play"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cover"
            app:layout_constraintVertical_bias="0.615" />

        <ImageButton
            android:id="@+id/button_next"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginEnd="76dp"
            android:background="@drawable/rounded_button"
            android:onClick="onClick"
            android:src="@drawable/ic_next_button_img_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cover"
            app:layout_constraintVertical_bias="0.615" />

        <ImageButton
            android:id="@+id/button_previous"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/rounded_button"
            android:onClick="onClick"
            android:src="@drawable/ic_previous_button_img_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_pause"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cover"
            app:layout_constraintVertical_bias="0.615" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>